@{
    ViewData["Title"] = "Home Page";
}
@model chefsdishes.Models.Chef
<a href="/Chefs">Home</a>
<h2 class='header'>Add a Chef!</h2>
<form class='big_form' asp-controller="Home" asp-action="NewChefs" method='POST'>
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input type="text" asp-for='FirstName' class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input type="text" asp-for='LastName' class="form-control" id="exampleFormControlInput1">
    </div>
    <div class="form-group">
        <span asp-validation-for="BirthDate"></span>
        <label asp-for="BirthDate"></label>
        <input type="date" asp-for='BirthDate' class="form-control" id="exampleFormControlInput1">
    </div>
    <button type="submit" value='submit' class="btn btn-success">Add</button>
</form>